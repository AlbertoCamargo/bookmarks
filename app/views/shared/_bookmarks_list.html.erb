<table class="table table-bordred ">
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Shortening</th>
      <th>Site</th>
      <th colspan="1"></th>

    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.title %></td>
        <td><%= link_to(bookmark.url, bookmark.url) %></td>
        <td><%= link_to(bookmark.shortening, bookmark.shortening) %></td>
        <td><%= bookmark.site.url %></td>
        <td>
          <div class="btn-group" role="group" aria-label="Default button group">
            <%= link_to(edit_site_bookmark_path(bookmark.site, bookmark)) do %>
              <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span></button>
            <% end %>
            <%= link_to(site_bookmark_path(bookmark.site, bookmark), method: :delete, data: { confirm: 'Are you sure?' }) do %>
              <button type="button" class="btn btn-default"> <span class="glyphicon glyphicon-remove"></span></button>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
